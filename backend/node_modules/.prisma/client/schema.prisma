// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  roles     String[] @default(["user"])
  googleId  String?  @unique
  githubId  String?  @unique
  theme     String   @default("light")
  language  String   @default("en")
  blocked   Boolean  @default(false)
  createdAt DateTime @default(now())

  inventories Inventory[]  @relation("creatorInventories")
  items       Item[]       @relation("creatorItems")
  discussions Discussion[]
}

model Inventory {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  category    String?
  creator     User     @relation("creatorInventories", fields: [creatorId], references: [id])
  creatorId   Int
  public      Boolean  @default(false)
  tags        String[]
  imageUrl    String?
  version     Int      @default(1)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  items       Item[]
  discussions Discussion[]
  fields      Field[]
  customIDs   CustomID[]
}

model Item {
  id          Int       @id @default(autoincrement())
  inventory   Inventory @relation(fields: [inventoryId], references: [id])
  inventoryId Int
  customId    String
  createdBy   User      @relation("creatorItems", fields: [createdById], references: [id])
  createdById Int
  fieldValues Json
  likesCount  Int       @default(0)
  version     Int       @default(1)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([inventoryId, customId])
}

model Field {
  id          Int       @id @default(autoincrement())
  inventory   Inventory @relation(fields: [inventoryId], references: [id])
  inventoryId Int
  type        String
  title       String
  description String?
  showInTable Boolean   @default(true)
  order       Int       @default(0)
}

model CustomID {
  id           Int       @id @default(autoincrement())
  inventory    Inventory @relation(fields: [inventoryId], references: [id])
  inventoryId  Int
  elementType  String
  elementValue String
  order        Int       @default(0)

  @@unique([inventoryId, elementValue])
}

model Discussion {
  id          Int       @id @default(autoincrement())
  inventory   Inventory @relation(fields: [inventoryId], references: [id])
  inventoryId Int
  user        User      @relation(fields: [userId], references: [id])
  userId      Int
  message     String
  createdAt   DateTime  @default(now())
}
